  "item": [
    {
      "name": "Register - Recruiter",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"recruiter@example.com\",\n    \"password\": \"123456\",\n    \"role\": \"recruiter\"\n}"
        }
